@model IEnumerable<MasProjekt.Klient>

@{
    ViewBag.Title = "Index";
}

<h2>Klienci</h2>

<p>
    @Html.ActionLink("Dodaj nowego klienta", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Imie) 
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nazwisko) 
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nr_telefonu)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Adres)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Imie)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nazwisko)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nr_telefonu)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Adres)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edit", new { id=item.Osoba_ID }) |
            @Html.ActionLink("Szczegóły", "Details", new { id=item.Osoba_ID }) |
            @Html.ActionLink("Usuń", "Delete", new { id=item.Osoba_ID })
        </td>
    </tr>
}

</table>
